.chat-area
  position fixed
  right 20px
  bottom 0
  
  :after
    clear right

.chat-box
  font normal normal 11px/1.4 Tahoma,Verdana,Sans-Serif
  color #333
  width 200px /* Chatbox width */
  max-height 50%
  border 1px solid #344150
  border-bottom none
  background-color white
  position relative
  right 10px
  float right
  margin-left 10px
  bottom 0
  z-index 9999
  -webkit-box-shadow 1px 1px 5px rgba(0,0,0,.2)
  -moz-box-shadow 1px 1px 5px rgba(0,0,0,.2)
  box-shadow 1px 1px 5px rgba(0,0,0,.2)


  > input[type=checkbox]
    display block
    margin 0 0
    padding 0 0
    position absolute
    top 0
    right 0
    left 0
    width 100%
    height 26px
    z-index 4
    cursor pointer
    opacity 0
  
  > label
    display block
    height 24px
    line-height 24px
    background-color #344150
    color white
    font-weight bold
    padding 0 1em 1px


  > label:before 
    content attr(data-collapsed)

  .chat-box-content
    padding 10px
    display none
    position fixed
    bottom 26px
    border 1px solid black
    width 179px
    margin 0
  
 

  /* hover state */
  > input[type=checkbox]:hover + label 
    background-color #404D5A

  /* checked state */
  > input[type=checkbox]:checked
    + label 
      background-color #212A35
    + label:before 
      content attr(data-expanded)
    ~ .chat-box-content 
      display block
      min-height 100px
      overflow auto
  
  .chat-box-content
    max-height 50%
    overflow auto
    > ul
      padding 0
      cursor default
      
      > li
        list-style-type none
        
      /*  
      > li:nth-child(odd)
        background #f2f2f2
        width 100%
      */

    > input
      width 100%
    
  